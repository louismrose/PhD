operation String toIdentifier() : String {
	return self.toLowerCase().replace(' ', '_');
}

operation Action getIdentifier() : String {
	return self.name.toIdentifier();
}

operation Proposition getIdentifier() : String {
	var result : String;
	
	if (not self.positive) {
		result := 'not_';
	}
	
	result := result + self.type.name.toIdentifier();
	
	for (parameter in self.parameters) {
		result := result + '_' + parameter.name;
	}
	
	return result;
}