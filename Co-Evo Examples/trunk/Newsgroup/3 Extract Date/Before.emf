@namespace(uri="newsgroupstats", prefix="")
package newsgroupstats;

class Newsgroup {
   val Article[*] articles;
}

class Article {
   attr String articleId;
   val Person sender;
   attr String subject;
   attr String[*] newsgroups;
   attr String inReplyToId;
   ref Article#replies inReplyTo;
   attr String date;
   val Article[*]#inReplyTo replies;
}

class Person {
   attr String name;
   attr String email;  
}